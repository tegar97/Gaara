<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Gaara" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="baseColor">
        <item name="android:layout_width">169dp</item>
        <item name="android:layout_height">84dp</item>

        <item name="android:tint">@color/colorBackground</item>

    </style>
    <style name="TextContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextContent.HeadlineMedium">


        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="TextContent.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/robotoslab_medium</item>
        <item name="android:textSize">20sp</item>

    </style>
    <style name="TextContent.PriceBig">
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>

    </style>
    <style name="TextContent.content">
        <item name="android:textColor">@color/contentColor</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>

    </style>


    <style name="Theme.Gaara" parent="Base.Theme.Gaara" />
</resources>